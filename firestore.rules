rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leitura pública na coleção cobrancas, escrita só autenticado
    match /cobrancas/{document} {
      allow read: if true; // Libera leitura para todos (inclusive Make)
      allow write: if request.auth != null; // Escrita só autenticado
    }
    
    // Permitir acesso à coleção lancamentos para usuários autenticados
    match /lancamentos/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acesso à coleção usuarios para usuários autenticados
    match /usuarios/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Regra geral para outras coleções
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}